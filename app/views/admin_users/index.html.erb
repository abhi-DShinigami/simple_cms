<% @page_title = "All Admin Users" %>

<%= link_to("Back to main menu", admin_path, :class => 'back-link') %>

<div class="admin-users index">
	<h2>Admin Users</h2>
	
	<%= link_to("Add new admin_user",new_admin_user_path,:class =>'action new') %>
  
  <br /><br />
  <div> <%= pluralize(@admin_users.size, 'admin user') %> found </div><br />
	
	<table class="listing" summary = "Admin User List">
		<tr class = "header">
            <th class = "center"> Username</th>
            <th class = "center">Name</th>
            <th class="center">Email</th>
			<th class = "center">Actions</th>
		</tr>
		
		<% @admin_users.each do |admin_user| %>
		<tr>
			<td><%= admin_user.username %></td>
			<td><%= admin_user.name %></td>
            <td class = "center"><%= mail_to(admin_user.email) %></td>
			<td class = "actions">
				<%= link_to("Edit",edit_admin_user_path(admin_user), :class => 'action edit')%>
				<%= link_to("Delete",delete_admin_user_path(admin_user), :class => 'action delete')%>
			</td>
		</tr>
		<% end %>
	</table>
</div>
